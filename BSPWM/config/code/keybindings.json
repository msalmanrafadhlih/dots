// Place your key bindings in this file to override the defaults
[
  // ------- 游대 TOGGLE PANEL -----------
  {
    "key": "alt+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "alt+o",
    "command": "multiCommand.toggleFocusEditor"
  },
  {
    "key": "alt+x",
    "command": "workbench.view.extensions"
  },
  {
    "key": "alt+f",
    "command": "workbench.view.explorer"
  },
  {
    "key": "alt+p",
    "command": "workbench.action.focusActivityBar"
  },

  // ------- 游대 TAB NAVIGATION -----------
  {
    "key": "alt+right",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+alt+right",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+alt+left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+alt+up",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+alt+down",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+alt+\\",
    "command": "workbench.action.splitEditorDown"
  },

  // ------- 游대 PANEL -----------
  {
    "key": "alt+b",
    "command": "workbench.action.focusPanel"
  },
  {
    "key": "alt+b",
    "command": "workbench.action.togglePanel",
    "when": "panelFocus"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  {
    "key": "alt+left",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },

  // ------- 游대 MULTICURSOR NAVIGATION -----------
  {
    "key": "ctrl+d",
    "command": "editor.action.addSelectionToNextFindMatch"
  },
  {
    "key": "ctrl+shift+l",
    "command": "editor.action.selectHighlights"
  },
  {
    "key": "ctrl+f2",
    "command": "editor.action.changeAll"
  },
  {
    "key": "alt+shift+down",
    "command": "editor.action.insertCursorBelow"
  },
  {
    "key": "alt+shift+up",
    "command": "editor.action.insertCursorAbove"
  },

  // ------- 游대 CURSOR NAVIGATION -----------
  {
    "key": "ctrl+down",
    "command": "multiCommand.cursorDown5",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+up",
    "command": "multiCommand.cursorUp5",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.gotoLine"
  },
  {
    "key": "ctrl+g",
    "command": "workbench.action.gotoSymbol"
  },
  {
    "key": "ctrl+shift+g",
    "command": "workbench.action.showAllSymbols"
  },

  // ------- 游대 OTHERS -----------
  {
    "key": "ctrl+0",
    "command": "workbench.action.zoomReset"
  },
  {
    "key": "escape",
    "command": "notifications.hideToasts",
    "when": "notificationToastsVisible"
  },

  // ------- 游대 SEARCH NAVIGATIONS -----------
  {
    "key": "ctrl+f",
    "command": "multiCommand.focusFromSearch",
    "when": "editorIsOpen && !editorTextFocus && !view.terminal.visible"
  },
  {
    "key": "ctrl+f",
    "command": "workbench.view.searh.focus",
    "when": "activeViewlet == 'workbench.view.search' && !inputFocus"
  },
  {
    "key": "ctrl+alt+i",
    "command": "-workbench.panel.chat.view.copilot.toggleVisibility",
    "when": "workbench.panel.chat.view.copilot.active"
  },
  {
    "key": "ctrl+alt+f",
    "command": "workbench.action.files.openLocalFolder"
    // "when": "remoteFileDialogVisible"
  },
  {
    "key": "alt+q",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeActiveEditor"
  },
  {
    "key": "shift+alt+q",
    "command": "workbench.action.closeWindow"
  },
  {
    "key": "ctrl+shift+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+alt+[",
    "command": "livePreview.start.internalPreview.atFile"
  },
  {
    "key": "ctrl+alt+]",
    "command": "livePreview.start.externalDebugPreview.atFile"
  },
  {
    "key": "ctrl+alt+i",
    "command": "-workbench.action.chat.open",
    "when": "!chatSetupDisabled && !chatSetupHidden"
  },
  {
    "key": "ctrl+alt+i",
    "command": "-workbench.panel.chat",
    "when": "workbench.panel.chat.view.copilot.active"
  },
  {
    "key": "ctrl+alt+i",
    "command": "workbench.action.chat.openInNewWindow"
  }
]
